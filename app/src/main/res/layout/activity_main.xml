<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:id="@+id/topStuff">
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ageInfoText"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="10sp"
            android:text="Age"
            android:textColor="@color/offWhite"/>
        <TextView
            android:id="@+id/ageInfo"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="15sp"
            android:textColor="@color/offWhite"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/feedInfoText"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hunger"
            android:textSize="10sp"
            android:textColor="@color/offWhite"/>
        <TextView
            android:id="@+id/feedInfo"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/offWhite"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/waterInfoText"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water"
            android:textSize="10sp"
            android:textColor="@color/offWhite"/>
        <TextView
            android:id="@+id/waterInfo"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/offWhite"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/happyInfoText"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Happy"
            android:textSize="10sp"
            android:textColor="@color/offWhite"/>
        <TextView
            android:id="@+id/happyInfo"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="15sp"
            android:textColor="@color/offWhite"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/healthInfoText"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="10sp"
            android:text="Health"
            android:textColor="@color/offWhite"/>
        <TextView
            android:id="@+id/healthInfo"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="15sp"
            android:textColor="@color/offWhite"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/deathInfoText"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="10sp"
            android:text="Death"
            android:textColor="@color/offWhite"/>
        <TextView
            android:id="@+id/deathInfo"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="15sp"
            android:textColor="@color/offWhite"/>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topStuff"
        android:id="@+id/choosePet">
        <TextView
            android:id="@+id/NewPet"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/offWhite"/>
        <TextView
            android:id="@+id/OldPet"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/offWhite"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choosePet">
        <TextView
            android:id="@+id/deadPet"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/red"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choosePet">
        <TextView
            android:id="@+id/game1"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/offWhite"/>
        <TextView
            android:id="@+id/game2"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/offWhite"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:id="@+id/bottomStuff">
    <Button
        android:id="@+id/mealBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:text="Meal"
        android:minHeight="30dp"
        android:minWidth="50dp"
        android:textColor="#fff"
        android:padding="0dp"
        android:layout_margin="5dp"
        android:textSize="12dp" />
    <Button
        android:id="@+id/treatBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:minHeight="30dp"
        android:minWidth="60dp"
        android:textSize="12dp"
        android:text="Treat"
        android:layout_margin="5dp"
        android:textColor="#fff" />
    <Button
        android:id="@+id/waterBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:text="Water"
        android:minHeight="30dp"
        android:minWidth="60dp"
        android:textSize="12dp"
        android:textColor="#fff"
        android:layout_margin="5dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/playBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:text="Play"
        android:minHeight="30dp"
        android:minWidth="60dp"
        android:textSize="12dp"
        android:textColor="#fff"
        android:layout_margin="5dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/PunishBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:text="Punish"
        android:textColor="#fff"
        android:minHeight="30dp"
        android:minWidth="60dp"
        android:textSize="12dp"
        android:layout_margin="5dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/shotBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:text="Shot"
        android:minHeight="30dp"
        android:minWidth="50dp"
        android:textSize="12dp"
        android:textColor="#fff"
        android:layout_margin="5dp"
        android:textStyle="bold" />
</LinearLayout>

</RelativeLayout>